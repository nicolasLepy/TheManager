<Window x:Class="TheManager_GUI.Windows_Competition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheManager_GUI"
        mc:Ignorable="d"
        Title="Windows_Competition" Height="1075" Width="1450" Style="{StaticResource StyleWindowsWithMap}">
    <Grid>
		<StackPanel Orientation="Vertical">
			<Button Name="btnQuitter" Click="BtnQuitter_Click" Width="25" Height="25" HorizontalAlignment="Right">
				<Image Name="imgBtnQuitter" Source="Images/return.png" Width="25" Height="25" Margin="3"/>
			</Button>
			<Label Content="Competition" Name="lbCompetition" Style="{StaticResource StyleLabel1}"/>
			<Border Style="{StaticResource StyleBorderStackPanel}" Padding="5">
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<Button Name="btnTourGauche" Click="BtnTourGauche_Click">
						<Image Name="imgBtnTourGauche" Source="Images/left.png" Width="20" Height="20"/>
					</Button>

					<Label Name="lbNomTour" Content="Tour préliminaire" Style="{StaticResource StyleLabel2}" Width="500" HorizontalContentAlignment="Center"/>
					<Button Name="btnTourDroite" Click="BtnTourDroite_Click">
						<Image Name="imgBtnTourDroite" Source="Images/left.png" Width="20" Height="20"/>
					</Button>

				</StackPanel>
			</Border>

			<StackPanel Orientation="Horizontal">
				<StackPanel Orientation="Vertical" Width="150">
					<ComboBox Name="cbYear" Style="{StaticResource StyleComboBox}" FontSize="12">
					</ComboBox>
					<ListBox Name="lbStats" Style="{StaticResource StyleListBox}" FontSize="12">
						<ListBoxItem Content="Classement général" Selected="SelectedRanking"/>
						<ListBoxItem Content="Classement domicile" Selected="SelectedHomeRanking"/>
						<ListBoxItem Content="Classement extérieur" Selected="SelectedAwayRanking"/>
						<ListBoxItem Content="Classement des buteurs" Selected="SelectedGoalscorers"/>
						<ListBoxItem Content="Possession" Selected="SelectedStatPossession"/>
						<ListBoxItem Content="Tirs" Selected="SelectedStatShot"/>
						<ListBoxItem Content="Records" Selected="SelectedRecords"/>
						<ListBoxItem Content="Palmarès par équipe" Selected="SelectedPalmaresClubs"/>
						<ListBoxItem Content="Palmarès par année" Selected="SelectedPalmaresYears"/>
						<ListBoxItem Content="Budget" Selected="SelectedBudget"/>
						<ListBoxItem Content="Niveau" Selected="SelectedLevel"/>
						<ListBoxItem Content="Potentiel" Selected="SelectedPotential"/>
						<ListBoxItem Content="Stades" Selected="SelectedStadium"/>

					</ListBox>

					<Button Content="Historique" Name="btnHistoric" Width="100" Click="BtnHistoric_Click" Style="{StaticResource StyleButton1}"/>
				</StackPanel>
				<StackPanel Orientation="Vertical">
					<Border Style="{StaticResource StyleBorderStackPanel}" Margin="5">
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
							<Button Name="btnJourneeGauche" Click="BtnJourneeGauche_Click">
								<Image Name="imgBtnJourneeGauche" Source="Images/left.png" Width="20" Height="20"/>
							</Button>

							<Button Name="btnJourneeDroite" Click="BtnJourneeDroite_Click">
								<Image Name="imgBtnJourneeDroite" Source="Images/left.png" Width="20" Height="20"/>
							</Button>

						</StackPanel>
					</Border>
					<ScrollViewer VerticalScrollBarVisibility="Auto" Height="900" Width="600">
						<StackPanel Orientation="Vertical" Name="spMatchs">
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
							</StackPanel>
						</StackPanel>
					</ScrollViewer>

				</StackPanel>

				<StackPanel Orientation="Vertical" Name="spBlocClassement">
					<ScrollViewer VerticalScrollBarVisibility="Auto" Height="575" Width="490">
						<StackPanel Orientation="Vertical" Name="spRanking" Width="490">
						</StackPanel>
					</ScrollViewer>
					<StackPanel Orientation="Vertical" Width="600" Height="400" ClipToBounds="True">
						<WindowsFormsHost Width="600" Height="400" Name="host">

						</WindowsFormsHost>

					</StackPanel>

				</StackPanel>



			</StackPanel>

		</StackPanel>
    </Grid>
</Window>
