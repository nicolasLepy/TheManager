<UserControl x:Class="TheManager_GUI.controls.ControlStickerTournament"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheManager_GUI.controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid x:Name="gridMain">
		<Grid.RowDefinitions>
			<RowDefinition Height="70"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.2*"/>
			<ColumnDefinition Width="0.4*"/>
			<ColumnDefinition Width="0.4*"/>
		</Grid.ColumnDefinitions>
		<Border x:Name="borderTournament" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" CornerRadius="5" BorderThickness="1" Margin="5">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.3*"/>
					<ColumnDefinition Width="0.7*"/>
				</Grid.ColumnDefinitions>
				<Image Grid.Column="0" x:Name="imageTournament" Style="{StaticResource image}" Source="..." Height="50"/>
				<TextBlock Grid.Column="1" x:Name="tbTournament" Style="{StaticResource textPlain}" Text="..." TextWrapping="Wrap" TextAlignment="Center"/>
			</Grid>
		</Border>
		
	</Grid>
</UserControl>
