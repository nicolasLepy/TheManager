<Window x:Class="TheManager_GUI.GlobalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheManager_GUI" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
		mc:Ignorable="d"
        Title="GlobalWindow" Height="800" Width="1200" Style="{StaticResource StyleWindows}">
    <Grid>
		<StackPanel Orientation="Vertical">
			<Button Name="btnQuitter" Click="btnQuitter_Click"  Width="25" Height="25" HorizontalAlignment="Right">
				<Image Name="imgBtnQuitter" Source="Images/return.png" Width="25" Height="25" Margin="3"/>
			</Button>
			<Label Content="Evolution" Name="lbCompetition" Style="{StaticResource StyleLabel1}"/>

			<Border Style="{StaticResource StyleBorderStackPanel}">
				<ScrollViewer Height="700" VerticalScrollBarVisibility="Auto">
					<StackPanel x:Name="spMain" Orientation="Vertical">

					</StackPanel>
				</ScrollViewer>
			</Border>
						
		</StackPanel>
	</Grid>
</Window>
